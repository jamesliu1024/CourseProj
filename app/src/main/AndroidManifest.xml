        <activity
                android:name=".Admin.AdminActivity"
                android:exported="true">
        </activity>
        <activity
                android:name=".Admin.AddCourseActivity"
                android:exported="true">
        </activity>
        <activity
                android:name=".Admin.AddStudentActivity"
                android:exported="true">
        </activity>
        <activity
                android:name=".Admin.ChangePasswordActivity"
                android:exported="true">
